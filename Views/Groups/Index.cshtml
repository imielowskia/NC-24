@model IEnumerable<NC_24.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="bg-primary bg-gradient bg-opacity-10">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Field)
            </th>            
            <th></th>
        </tr>
        <tr class="bg-secondary bg-gradient bg-opacity-10 border-bottom">
            <th>@Html.DisplayNameFor(model => model.Courses)</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Field.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            @foreach(var course in item.Courses)
            {
                <tr>
                    <td>@course.Name</td>
                    <td></td>
                    <td>
                        <a asp-action="Attendace" asp-route-id="@item.Id" asp-route-courseid="@course.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
